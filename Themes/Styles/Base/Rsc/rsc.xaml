<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <!-- Radius -->
    <sys:Double x:Key="VRscRound">4</sys:Double>
    
    <CornerRadius x:Key="RscRound" 
                  BottomLeft="{StaticResource VRscRound}" 
                  BottomRight="{StaticResource VRscRound}" 
                  TopLeft="{StaticResource VRscRound}" 
                  TopRight="{StaticResource VRscRound}"/>
    
    <CornerRadius x:Key="RscRoundLeft" 
                  BottomLeft="{StaticResource VRscRound}" 
                  BottomRight="0"
                  TopLeft="{StaticResource VRscRound}" 
                  TopRight="0"/>
    
    <CornerRadius x:Key="RscRoundRight" 
                  BottomLeft="0"
                  BottomRight="{StaticResource VRscRound}" 
                  TopLeft="0"
                  TopRight="{StaticResource VRscRound}"/>
    
    <!-- Dim -->
    <!-- <sys:Double x:Key="WgHeight">25</sys:Double> -->
    
</ResourceDictionary>