<UserControl x:Class="GeoTools.Views.DlgView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:GeoTools.Views"
             mc:Ignorable="d">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" CornerRadius="{StaticResource RscRound}" 
                Background="{StaticResource RgbM2}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Bouton de retour au menu -->
                <Button Grid.Column="0"  x:Name="BtnDlgBackHome" 
                         HorizontalAlignment="Left"
                         Style="{StaticResource ButtonPlainM2}"
                         Width="25"
                         Height="25"
                         Click="BtnDlgBackHome_OnClick">
                    <Image Style="{StaticResource ImgHomeM1}"
                           Width="18"
                           Height="18"/>
                </Button>
                
                <!-- ComboBox des types d'affichages -->
                <ComboBox Grid.Column="2" 
                          HorizontalAlignment="Right"
                          Style="{StaticResource ComboBoxPlainM1}"/>
            </Grid>
        </Border>
        
        <!-- Body -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 5 0 0">
            <!-- MenuLeft -->
            <Border x:Name="BorderTest" CornerRadius="{StaticResource RscRound}" 
                    Background="{StaticResource RgbM2}"
                    Width="300">
                <StackPanel Orientation="Vertical">
                
                </StackPanel>
            </Border>
            
            <!-- BodyDlg -->
            <Grid>
                <views:DlgViewAll x:Name="DlgViewAll" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </Grid>
        </StackPanel>
    </Grid>
    
</UserControl>
