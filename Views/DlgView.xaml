                <!--                             HorizontalAlignment="Left" -->
                <!--                             VerticalAlignment="Center" /> -->
                <!--      -->
                <!--     </TabItem> -->
                <!-- </TabControl> -->
            </Grid>
        </StackPanel>
    </Grid>

</UserControl>
